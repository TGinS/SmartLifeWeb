<p><h2>提供</h2></p>
<div class="divider"></div>
<div class="section">
  <h5>名前</h5>
  <p><%= @provision.name %></p>
</div>
<div class="divider"></div>
<div class="section">
  <h5>提供者名</h5>
  <p><%= @provision.user_name %></p>
</div>
<div class="divider"></div>
<div class="section">
  <h5>メモ</h5>
  <p><%= @provision.note %></p>
</div>
<div class="divider"></div>
<div class="section">
  <h5>募集候補</h5>
  <%@candidates.each_with_index do |candidate| %>
      <p>
        <%= link_to candidate.name, candidate_path(candidate.id) %>
        <%= candidate.vote %>
        <%= form_for(CandidateVote.new,:url=>{:controller=>'candidate_vote', :action=>'create', :method=>'post'}) do |f| %>
            <%= f.hidden_field :candidate_id, :value=>candidate.id %>
            <%= f.hidden_field :user_id, :value=>current_user.id %>
            <%= f.submit %>
      <% end %>
      </p>
  <% end %>
</div>
<div class="divider"></div>
<% if user_signed_in? %>
    <div class="section">
      <h5>応募する</h5>
      <button class="waves-effect waves-light btn light-blue darken-3 modal-trigger" href="#form">応募</button>
    </div>
    <div id="form" class="modal">

    </div>
<% else %>
    <div class="section">
      <h5>応募する</h5>
      <button class="waves-effect waves-light btn disabled" href="#form">応募</button>
    </div>
<% end %>

<script>
    $(document).ready(function(){
        $('.modal-trigger').leanModal();
    });
    $(document).ready(function() {
        $('select').material_select();
    });
</script>
