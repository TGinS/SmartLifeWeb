<div class="section">
  <h5>名前</h5>
  <p><%= @candidate.name %></p>
</div>
<div class="divider"></div>
<div class="section">
  <h5>応募先</h5>
  <p><%= link_to @candidate.provision_name, provision_path(@candidate.provision_id) %></p>
